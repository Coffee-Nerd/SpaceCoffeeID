<style>

.spark {
  position: absolute;
  inset: 0;
  border-radius: var(--border-radius);
  rotate: 0deg;
  mask-image: linear-gradient(white, transparent 50%);
  animation: flip calc(var(--spark-duration) * 2) infinite steps(2, end);
z-index: -1;
}

@keyframes flip {
  to {
    rotate: 360deg;
  }
}
.image-container {
  display: inline-block;
  border-radius: 34px;
  position: relative;
  overflow: hidden;
  width: 195px; /* Adjusted to image width */
  height: 399px; /* Adjusted to image height */
  z-index: 1;
}

.image-container img {
  display: block;
  position: absolute;
  left: -2px;
  border-radius: var(--border-radius);
}
:root {
  --border-radius: 999px;
  --box-shadow-color: #333333;
  --backdrop-color: transparent;
  --backdrop-hover-color: #141414;
  --spark-color: #ffffff;
  --spark-duration: 3s;
}

.spark::before {
  content: "";
  position: absolute;
  width: 200%;
  aspect-ratio: 1;
  inset: 0 auto auto 50%;
  z-index: -1;
  translate: -50% -15%;
  rotate: -90deg;
  opacity: 1;
  background-image: conic-gradient(
    from 0deg,
    transparent 0 340deg,
    var(--spark-color) 360deg
  );
  animation: rotate var(--spark-duration) linear infinite both;
}

@keyframes rotate {
  0%, 20% {
    transform: rotate(0deg);
    opacity: 0; /* Start and stay invisible for a longer period */
  }
  30%, 70% {
    opacity: 1; /* Fully visible during the middle of the animation */
  }
  80%, 100% {
    transform: rotate(180deg);
    opacity: 0; /* Fade out and stay invisible for a longer period */
  }
}


.image-container .spark, .image-container .backdrop {
  position: absolute;
  inset: 0;
  border-radius: 10px; /* Adjust as needed */
}

.jumbo, .xxlarge {
    /* Gradient background */
    background: linear-gradient(to right bottom, rgb(255, 255, 255) 30%, rgba(255, 255, 255, 0.38));
    -webkit-background-clip: text;
    background-clip: text;
    
    /* Making the text color transparent to show the gradient */
    -webkit-text-fill-color: transparent;
    color: transparent; /* Fallback: although current browsers support background-clip:text */
    
    /* Rest of your styles */
    font-family: 'Arial', sans-serif;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 24px;
}


/* You might need to set the display property for the gradient to work correctly */
.jumbo, .xxlarge {
    display: inline-block;
}

.button-group {
  display: flex; /* Aligns the buttons in a row */
  flex-wrap: wrap; /* Allows buttons to wrap onto the next line on smaller screens */
  justify-content: center; /* Centers the buttons in a row */
  gap: 10px; /* Adjust the space between buttons if needed */
}

.button-group a.button {
  white-space: nowrap; /* Prevents the text in buttons from wrapping */
}

/* Optional: You might want to remove the margin-top class if it adds unwanted space */
.button.margin-top {
  margin-top: 0;
}
@media (max-width: 768px) { /* Adjust the breakpoint as necessary */
  .button-group {
    flex-direction: column;
  }
}
    h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
        margin: 50px 0% 0% 0%;
	}
    /* effect-shine */
h1.effect-shine:hover {
  -webkit-mask-image: linear-gradient(to right, rgba(0,0,0,1) 25%, rgba(0,0,0,0) 50%, rgba(0,0,0,1) 75%);
  -webkit-mask-size: 200% 100%;
  animation: shine 2s linear
}

@keyframes shine {
  0% {
    -webkit-mask-position: 200% 0;
  }
  100% {
    -webkit-mask-position: -200% 0;
  }
}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
    h2 {
